# Discord Bot Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit your .env file to version control!

# Required: Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_actual_bot_token_here

# Optional: Bot configuration
# Uncomment and modify these settings as needed

# Command prefix (default: !)
# Examples: !, ?, ., music!, m!
# COMMAND_PREFIX=!

# Bot owner ID (your Discord user ID)
# This enables owner-only commands
# Find your ID by enabling Developer Mode in Discord and right-clicking your name
# BOT_OWNER_ID=123456789012345678

# Development mode (shows detailed error messages)
# Set to true during development, false in production
# DEVELOPMENT_MODE=false

# Logging configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO
# LOG_FILE=bot.log

# Music player settings
# Default volume for new voice connections (0.0 to 1.0)
# DEFAULT_VOLUME=0.5

# Maximum song duration in seconds (default: no limit)
# Set this to prevent extremely long videos
# MAX_SONG_DURATION=3600

# Auto-disconnect timeout in seconds (default: 300 = 5 minutes)
# Bot leaves voice channel after this period of inactivity
# INACTIVITY_TIMEOUT=300

# Queue size limit (default: no limit)
# Prevents users from adding too many songs
# MAX_QUEUE_SIZE=100

# Performance settings
# Maximum number of concurrent voice connections
# Useful for limiting resource usage
# MAX_VOICE_CONNECTIONS=10

# Audio quality (default: 192)
# Options: 96, 128, 192, 256, 320
# Higher = better quality but more bandwidth
# AUDIO_BITRATE=192

# YouTube-DL options
# Cookie file for age-restricted videos (optional)
# YOUTUBE_COOKIES_FILE=cookies.txt

# Use IPv4 only (can help with some connection issues)
# FORCE_IPV4=true

# Database configuration (for future features)
# Uncomment if you add persistent storage
# DATABASE_URL=sqlite:///bot.db
# DATABASE_URL=postgresql://user:password@localhost/botdb

# Redis configuration (for advanced features like music queue persistence)
# REDIS_URL=redis://localhost:6379/0

# API Keys for additional features
# Last.fm API for "now playing" features
# LASTFM_API_KEY=your_lastfm_api_key
# LASTFM_API_SECRET=your_lastfm_api_secret

# Genius API for lyrics
# GENIUS_API_KEY=your_genius_api_key

# Spotify API for playlist import (future feature)
# SPOTIFY_CLIENT_ID=your_spotify_client_id
# SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Webhook URLs
# Error reporting webhook
# ERROR_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Stats tracking webhook
# STATS_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Feature flags
# Enable/disable specific features
# ENABLE_PLAYLISTS=true
# ENABLE_LYRICS=false
# ENABLE_SOUNDBOARD=false
# ENABLE_RADIO_MODE=false

# Cooldowns (in seconds)
# Prevent command spam
# PLAY_COOLDOWN=3
# SKIP_COOLDOWN=2
# QUEUE_COOLDOWN=5

# Permissions
# Comma-separated list of role IDs that can use DJ commands
# DJ_ROLE_IDS=123456789012345678,987654321098765432

# Comma-separated list of user IDs with full bot access
# ADMIN_USER_IDS=123456789012345678,987654321098765432

# Auto-updates
# Check for bot updates on startup
# CHECK_FOR_UPDATES=true

# Metrics and monitoring
# Send anonymous usage statistics
# TELEMETRY_ENABLED=false

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/...

# External services
# Your bot's website
# WEBSITE_URL=https://your-bot-website.com
